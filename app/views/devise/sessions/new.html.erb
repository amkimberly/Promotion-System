<div class= "d-flex justify-content-center">
  <div class="container border corners">
    <div class="mx-auto" style="width:200px">
      <div class= "mx-auto mf text-white">Login</div><br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class= "form-label text-white">
          <%= f.label :email %></div>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-label text-white">
          <br><%= f.label :password, 'Senha' %></div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field text-white"><br>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="row">
          <div class="col mx-5"><br>
            <%= f.submit "Entrar", class: "btn btn-success" %>
            <%= link_to "Voltar", root_path, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

