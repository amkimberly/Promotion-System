<% @product_categories.each do |product_category| %>
  <h3><%= link_to product_category.name, product_category %></h3>
<% end %>

<% if @product_categories.empty? %>
  <p>Nenhuma categoria cadastrada</p>
<% end %>

<%= link_to t('product_categories.link.register'), new_product_category_path %>
<%= link_to t('product_categories.link.back'), root_path %>