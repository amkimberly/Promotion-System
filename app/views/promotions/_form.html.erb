<% if @promotion.errors.any? %>
  <ul>
    <% @promotion.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert"> 
      <li><%= message%></li>
  </ul>
    <% end %>
<% end %>

<%= form_with model: @promotion, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>

  <div class="form-group">
    <%= f.label :code%>
    <%= f.text_field :code %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows:3 %>
  </div>

  <div class="form-group">
    <%= f.label :discount_rate %>
    <%= f.number_field :discount_rate %>
  </div

  <div class="form-group">
    <%= f.label :coupon_quantity %>
    <%= f.number_field :coupon_quantity %>
  </div>

  <div class="form-group">
    <%= f.label :expiration_date %><br>
    <%= f.date_field :expiration_date %>
    <br><br>
  </div>

  <div class="form-group">
  <%= f.label :product_category_ids %><br>
  <p><%= f.collection_check_boxes :product_category_ids, ProductCategory.all, :id, :name %></p>
  </div>

  <%= f.submit action_text, class: "btn btn-success" %>
  </div>

<% end %>