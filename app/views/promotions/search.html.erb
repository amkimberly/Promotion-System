<% if @promotions.present? %>
    <% @promotions.each do |promotion| %>
        <h3><%= "Resultados encontrados para '#{promotion.name}'" %></h3>
        <br><br>
        <td><%= link_to promotion.name, promotion %></td>
        <td><%= promotion.description %></td>
    <% end %>
<% elsif  @coupons.present? %>
    <% @coupons.each do |coupon| %>
        <h3><%= "Resultados encontrados" %></h3>
        <%= link_to coupon.title, coupon.promotion %>
    <% end %>
<% else %>
    <h3>Nenhum resultado encontrado</h3>
<% end %>
<br><br>
<%= link_to t('promotion.link.back'), promotions_path, class: "btn btn-primary"%>